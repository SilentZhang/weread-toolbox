{
  "name": "weread-toolbox",
  "displayName": "微信读书工具箱",
  "version": "0.0.7",
  "description": "微信读书工具箱，支持导出图文笔记（Markdown/Word），导出思维导图，同步 Notion 等。",
  "author": "三此君",
  "packageManager": "npm@9.6.2",
  "scripts": {
    "dev": "plasmo dev",
    "build": "run-s build:*",
    "build:chrome": "plasmo build --zip --tag=weread-toolbox",
    "build:edge": "plasmo build --target=edge-mv3 --zip --tag=weread-toolbox",
    "build:firefox": "plasmo build --target=firefox-mv3 --zip --tag=weread-toolbox",
    "build:brave": "plasmo build --target=brave-mv3 --zip --tag=weread-toolbox",
    "build:opera": "plasmo build --target=opera-mv3 --zip --tag=weread-toolbox",
    "package": "plasmo package"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.5",
    "crypto-js": "^4.1.1",
    "file-saver": "^2.0.5",
    "github-markdown-css": "^5.5.1",
    "html-docx-js-typescript": "^0.1.5",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "markmap": "^0.6.1",
    "markmap-lib": "^0.16.1",
    "plasmo": "0.74.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7",
    "remark-gfm": "^3.0.0"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.227",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "^18.0.11",
    "antd": "5.5.0",
    "jquery": "^3.6.0",
    "lodash.escaperegexp": "^4.1.2",
    "prettier": "2.8.7",
    "typescript": "5.0.3"
  },
  "manifest": {
    "homepage_url": "https://github.com/sancijun/weread-toolbox",
    "permissions": [
      "tabs",
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "*://i.weread.qq.com/*",
      "*://weread.qq.com/web/reader/*",
      "https://api.notion.com/*"
    ]
  }
}
